<UserControl x:Class="GSharp.Modules.Core.Console.GConsoleUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GSharp.Modules.Core.Console"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>

        <ListBox Grid.Row="0" x:Name="listConsole" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5"/>
        <TextBox Grid.Row="1" x:Name="textInput" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" KeyDown="textInput_KeyDown"/>
    </Grid>
</UserControl>
